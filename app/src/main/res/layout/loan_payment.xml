<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C9EDCECE"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:text="Enter UPI PIN"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <com.poovam.pinedittextfield.SquarePinField
                android:id="@+id/loan_u_pin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="11dp"
                android:cursorVisible="true"
                android:inputType="numberPassword"
                android:password="true"
                android:textSelectHandle="@drawable/text_handle"
                android:textSize="16sp"
                app:cornerRadius="14dp"
                app:fieldBgColor="#ddd"
                app:noOfFields="4" />

            <TextView
                android:id="@+id/tv_forgot_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="Forgot PIN?"
                android:textColor="@color/purple_700"
                android:textSize="15dp"
                android:textStyle="bold" />

            <com.konaire.numerickeyboard.NumericKeyboard
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:field="@+id/loan_u_pin"
                app:fieldMaxLength="4"
                app:keyTextColor="@android:color/holo_red_dark" />
        </LinearLayout>

        <ImageView
            android:id="@+id/i_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|top"
            android:src="@drawable/ic_close" />

</androidx.cardview.widget.CardView>