<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".manager.m_new_employee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/gradient"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/new2" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-75dp"
            android:layout_marginRight="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="7dp"
            android:elevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1B786060"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="7dp"
                    android:textColorHint="@color/black">

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:hint="Employee Name*"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/spin_back"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spin_post"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_down" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/spin_back"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spin_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_down" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/dob"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="7dp"
                    android:drawableRight="@drawable/ic_calender"
                    android:paddingLeft="12dp"
                    android:paddingTop="10dp"
                    android:text="Select date of birth*"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="7dp"
                    android:textColorHint="@color/black">

                    <EditText
                        android:id="@+id/et_mob"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:hint="Mobile Number*"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="7dp"
                    android:textColorHint="@color/black">

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:hint="Email ID*"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="7dp"
                    android:textColorHint="@color/black">

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:hint="Address*"
                        android:inputType="textCapSentences|textMultiLine"
                        android:maxLength="140"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="7dp"
                    android:textColorHint="@color/black">

                    <EditText
                        android:id="@+id/et_sal"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:hint="Enter salary amount*"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/ll_credential"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="7dp"
                    android:textColorHint="@color/black">

                    <EditText
                        android:id="@+id/et_l_id"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:hint="Enter login id*"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="7dp"
                    android:textColorHint="@color/black">

                    <EditText
                        android:id="@+id/et_l_pass"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:hint="Enter login password*"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="7dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="6dp"
                    android:text="New Account number"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/tv_ac"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="19dp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="7dp"
                    android:textColorHint="@color/black">

                    <EditText
                        android:id="@+id/et_amount"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:hint="Enter amount to be Deposit*"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="7dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_photo"
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="12dp"
                        android:layout_weight="1"
                        android:src="@drawable/user1"
                        android:tag="amol" />

                    <ImageView
                        android:id="@+id/iv_sign"
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/sign1"
                        android:tag="amol1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_uphoto"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="12dp"
                        android:layout_weight="1"
                        android:background="#2213E388"
                        android:gravity="center"
                        android:text="Upload Photo"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_usign"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:background="#2313E388"
                        android:gravity="center"
                        android:text="Upload Signature"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="17dp"
                    android:background="#BE6825A3"
                    android:enabled="false"
                    android:text="Add Employee"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>

